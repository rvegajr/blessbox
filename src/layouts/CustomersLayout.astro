---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section>
    <div
      class="px-8 pt-24 mx-auto max-w-7xl lg:px-16 md:px-12 xl:px-24 lg:flex"
    >
      <div class="lg:w-1/2 lg:pl-12 lg:ml-auto">
        <div class="top-0 pt-8 pb-16 lg:sticker lg:sticky">
          <div>
            <div class="lg:pl-36 md:pl-12">
              <nav class="p-4 rounded-lg bg-base-50 space-y-3 lg:p-8">
                <img src={frontmatter.logo.url} alt={frontmatter.logo.alt} />
                <div class="mt-6 space-y-6">
                  {
                    Object.entries(frontmatter.details).map(([key, value]) => (
                      <div>
                        <p class="text-base font-medium leading-6 text-blue-950">
                          {key}
                        </p>
                        <p class="text-sm text-base-400">{value}</p>
                      </div>
                    ))
                  }
                </div>
              </nav>
            </div>
          </div>
        </div>
      </div>
      <div class="lg:w-1/2 lg:order-first">
        <div class="flex-shrink-0">
          <div>
            <p class="mt-6 text-4xl font-semibold tracking-tight text-blue-950">
              {frontmatter.customer}
            </p>
            <p class="mt-5 text-base-500 lg:text-balance">
              {frontmatter.about}
            </p>
            <dl class="flex flex-col mt-12 gap-4">
              {
                frontmatter.challengesAndSolutions.map((item) => (
                  <div>
                    <dt>
                      <p class="mt-6 text-xl font-semibold tracking-tight text-blue-950">
                        {item.title}
                      </p>
                    </dt>
                    <dd class="mt-4 text-sm text-base-500 lg:text-pretty">
                      {item.content}
                    </dd>
                  </div>
                ))
              }
            </dl>
            <div class="mt-12">
              <span
                class="mt-6 text-xl font-semibold tracking-tight text-blue-950"
                >Results</span
              >
            </div>
            <ul role="list" class="flex flex-col mt-12 gap-2">
              {
                frontmatter.results.map((result, index) => (
                  <li class="flex items-center gap-2">
                    <span> {index + 1}</span>
                    <p class="text-sm text-base-500">{result}</p>
                  </li>
                ))
              }
            </ul>
          </div>
          <div class="prose-styles">
            <slot />
          </div>
        </div>
      </div>
    </div>
    <div
      class="px-8 py-24 mx-auto max-w-7xl lg:px-16 md:px-12 xl:px-24 lg:flex"
    >
      <div
        class="relative z-50 p-8 overflow-hidden bg-blue-500 shadow-xl rounded-2xl lg:py-12 lg:grid lg:grid-cols-2 lg:gap-x-8 md:col-span-full"
      >
        <div
          class="absolute inset-0 opacity-80 mix-blend-multiply saturate-0 filter"
        >
          <img
            src="https://images.unsplash.com/photo-1590650153855-d9e808231d41?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80"
            alt=""
            class="object-cover w-full h-full"
          />
        </div>
        <div class="relative lg:col-span-1">
          <blockquote class="mt-24 text-white">
            <p class="font-medium">
              Spaziobianco Public rollover performance exchange traded funds
              junk bonds passively NASDAQ bills upswing retirement corporate
              market exposure.
            </p>
          </blockquote>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
