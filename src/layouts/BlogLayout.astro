---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section>
    <div
      class="items-start px-8 py-24 mx-auto max-w-7xl lg:px-16 md:px-12 xl:px-24"
    >
      <div>
        <div class="items-center grid gap-12">
          <div>
            <h2
              class="text-3xl font-semibold tracking-tight text-blue-950 lg:text-7xl lg:text-balance"
            >
              {frontmatter.title}
            </h2><p class="mt-12 text-xl text-base-500 lg:text-balance">
              {frontmatter.description}
            </p>
            <div class="mt-6">
              <div class="flex items-center">
                <div>
                  <img
                    class="inline-block rounded-full h-9 w-9"
                    src={frontmatter.image.url}
                    alt={frontmatter.image.alt}
                  />
                </div>
                <div class="ml-3">
                  <p
                    class="text-sm font-medium text-base-500 group-hover:text-blue-950"
                  >
                    {frontmatter.author}
                  </p>
                  <p class="text-xs uppercase text-base-500">
                    {frontmatter.pubDate.toString().slice(0, 10)}
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section>
    <div class="px-8 py-12 mx-auto max-w-7xl lg:px-24">
      <div
        class="max-w-[40rem] prose-lg hover:prose-a:text-blue-500 prose prose-a:font-semibold prose-a:text-blue-300 prose-blockquote:text-blue-600 prose-h3:text-blue-950 text-base-500"
      >
        <slot />
      </div>
    </div>
  </section>
</BaseLayout>
