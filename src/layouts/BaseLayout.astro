---
// Foundations
import "../styles/global.css";
import BaseHead from "@/components/fundations/head/BaseHead.astro";
// Scripts
import AOSBody from "@/components/fundations/scripts/AOSBody.astro";
// Components
import Footer from "@/components/global/Footer.astro";
import Navigation from "@/components/global/Navigation.astro";

// Props for customizing the layout
export interface Props {
  title?: string;
  description?: string;
  hideNav?: boolean;
  hideFooter?: boolean;
}

const { 
  title = "BlessBox - QR-Based Registration & Verification System",
  description = "Streamlined QR-based registration and verification system for organizations managing events like food distributions, seminar registrations, and volunteer sign-ups.",
  hideNav = false, 
  hideFooter = false 
} = Astro.props;
---
<html
  lang="en"
  class="scroll-smooth selection:bg-base-800 selection:text-teal-500"
>
  <head>
    <BaseHead />
    <!-- Dynamic title override -->
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="relative flex flex-col min-h-screen bg-white">
    <div
      class="bg-stripes max-w-7xl mx-auto border-x border-base-200 px-2 md:px-0 w-full lg:overflow-hidden"
    >
      {!hideNav && <Navigation />}
      <main class="grow">
        <slot />
      </main>
    { !hideFooter && <Footer /> }
    </div>
    <!-- Scripts -->
    <AOSBody />
  </body>
</html>
