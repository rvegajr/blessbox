---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="py-8">
      <Text tag="h1" variant="textXL" class="dark:text-white text-base-900">
        Colors
      </Text>

      <div
        class="relative pt-2 mt-2 grid grid-cols-1 md:grid-cols-2 gap-8 before:absolute after:absolute before:bg-black after:bg-base-200 dark:before:bg-base-50 dark:after:bg-base-50/10 before:top-0 before:left-0 before:h-px before:w-18 after:top-0 after:right-0 after:left-20 after:h-px"
      >
        <div class="flex flex-col gap-2">
          <Text
            tag="h3"
            variant="textXS"
            class="font-medium uppercase dark:text-white text-base-900"
            >Accent</Text
          >
          <div class="mt-2 grid grid-cols-4 gap-1 gap-y-8">
            <div class="flex flex-col gap-2">
              <div class="size-full aspect-square bg-blue-50"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Accent 50
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="bg-blue-100 size-full aspect-square"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Accent 100
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="bg-blue-200 size-full aspect-square"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Accent 200
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="bg-blue-300 size-full aspect-square"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Accent 300
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="bg-blue-400 size-full aspect-square"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Accent 400
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="bg-blue-500 size-full aspect-square"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Accent 500
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="bg-blue-600 size-full aspect-square"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Accent 600
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="bg-blue-700 size-full aspect-square"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Accent 700
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="bg-blue-800 size-full aspect-square"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Accent 800
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="bg-blue-900 size-full aspect-square"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Accent 900
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div
                class="size-full aspect-square bg-blue-950 outline outline-blue-900"
              >
              </div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Accent 950
              </span>
            </div>
          </div>
        </div>

        <div class="flex flex-col gap-2">
          <Text
            tag="h3"
            variant="textXS"
            class="font-medium uppercase dark:text-white text-base-900"
            >Base</Text
          >
          <div class="mt-2 grid grid-cols-4 gap-1 gap-y-8">
            <div class="flex flex-col gap-2">
              <div class="size-full aspect-square bg-base-50"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Base 50
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="size-full aspect-square bg-base-100"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Base 100
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="size-full aspect-square bg-base-200"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Base 200
              </span>
            </div><div class="flex flex-col gap-2">
              <div class="size-full aspect-square bg-base-300"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Base 300
              </span>
            </div><div class="flex flex-col gap-2">
              <div class="size-full aspect-square bg-base-400"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Base 400
              </span>
            </div><div class="flex flex-col gap-2">
              <div class="size-full aspect-square bg-base-500"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Base 500
              </span>
            </div><div class="flex flex-col gap-2">
              <div class="size-full aspect-square bg-base-600"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Base 600
              </span>
            </div><div class="flex flex-col gap-2">
              <div class="size-full aspect-square bg-base-700"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Base 700
              </span>
            </div><div class="flex flex-col gap-2">
              <div class="size-full aspect-square bg-base-800"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Base 800
              </span>
            </div><div class="flex flex-col gap-2">
              <div class="size-full aspect-square bg-base-900"></div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Base 900
              </span>
            </div><div class="flex flex-col gap-2">
              <div
                class="size-full aspect-square bg-base-950 outline outline-base-900"
              >
              </div>
              <span class="text-xs dark:text-base-400 text-base-600"
                >Base 950
              </span>
            </div>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
