---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Data array
const pageData = [
  {
    sectionTitle: "All pages",
    categories: [
      {
        title: "Main",
        links: [
          { name: "Index 1ne", url: "/" },
          { name: "404", url: "/404" },
        ],
      },
      {
        title: "Forms",
        links: [
          { name: "Sign in", url: "/forms/sign-in" },
          { name: "Sign up", url: "/forms/sign-up" },
        ],
      },
      {
        title: "System Pages",
        links: [
          { name: "Links", url: "/system/links" },
          { name: "Colors", url: "/system/colors" },
          { name: "Buttons", url: "/system/buttons" },
          { name: "Typography", url: "/system/typography" },
          {
            name: "License",
            url: "https://lexingtonthemes.com/legal/license/",
          },
          {
            name: "Documentation",
            url: "https://lexingtonthemes.com/documentation",
          },
        ],
      },
    ],
  },
  {
    sectionTitle: "Content collections",
    categories: [
      {
        title: "Blog Pages",
        links: [
          { name: "Blog home", url: "/blog/home" },
          { name: "Blog post", url: "/blog/posts/1" },
          { name: "Tag index", url: "/blog/tags" },
          { name: "Tag Category", url: "/blog/tags/web3" },
          { name: "RSS", url: "/rss.xml" },
        ],
      },
      {
        title: "Utility Pages",
        links: [
          { name: "Terms Of use", url: "/infopages/terms" },
          { name: "Privacy Policy", url: "/infopages/privacy" },
        ],
      },
      {
        title: "Help Center",
        links: [
          { name: "Knowledge Base", url: "/helpcenter/knowledge-base" },
          { name: "Home", url: "/helpcenter/home" },
          { name: "Details", url: "/helpcenter/1" },
        ],
      },
    ],
  },
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="py-24">
      <Text
        tag="h1"
        variant="displayXL"
        class="font-semibold tracking-tighter text-base-800 lg:text-balance"
      >
        Overview
      </Text>
      <div class="flex flex-col mt-12">
        {
          pageData.map((section) => (
            <div class="md:col-span-2">
              <Text
                tag="h3"
                variant="textBase"
                class="font-medium text-base-800 md:text-balance"
              >
                {section.sectionTitle}
              </Text>
              <div class="pt-4 mt-4 grid grid-cols-1 md:grid-cols-4 gap-y-8">
                {section.categories.map((category) => (
                  <div class="flex flex-col space-y-2">
                    <Text tag="h3" variant="textBase" class=" text-base-900">
                      {category.title}
                    </Text>
                    {category.links.map((link) => (
                      <Text
                        tag="a"
                        variant="textSM"
                        class="font-medium text-base-500 hover:text-black"
                        href={link.url}
                        title={link.name}
                        aria-label={link.name}
                      >
                        {link.name}
                      </Text>
                    ))}
                  </div>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </Wrapper>
  </section>
</BaseLayout>
