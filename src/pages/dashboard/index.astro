---
/**
 * Main Dashboard Page - The Command Center! 🚀
 * 
 * This is where organization admins manage their registrations
 * with our beautiful, server-side rendered dashboard!
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import SimpleRegistrationGrid from '../../components/dashboard/SimpleRegistrationGrid.astro';
import { OrganizationRepository } from '../../implementations/repositories/OrganizationRepository';
import Wrapper from '../../components/fundations/containers/Wrapper.astro';
import Text from '../../components/fundations/elements/Text.astro';
import Button from '../../components/fundations/elements/Button.astro';

// Resolve organization context from query, domain, or recently created org
const orgRepo = new OrganizationRepository();
let organizationId = Astro.url.searchParams.get('orgId');
if (!organizationId) {
  const host = Astro.request.headers.get('host') || '';
  const domain = host.split(':')[0];
  const org = await orgRepo.findByDomain(domain);
  if (org) {
    organizationId = org.id;
  }
}
// As a final fallback, load the first organization to avoid demo placeholders
if (!organizationId) {
  const all = await orgRepo.findAll(1, 0);
  organizationId = all[0]?.id || '';
}

// Get current URL for filter state management
const url = new URL(Astro.request.url);
const currentFilters = {
  deliveryStatus: url.searchParams.get('deliveryStatus') || '',
  qrCodeLabels: url.searchParams.get('qrCodeLabels') || '',
  search: url.searchParams.get('search') || '',
};
---

<BaseLayout 
  title="Dashboard - BlessBox"
  description="Manage your registrations, QR codes, and event data with BlessBox's comprehensive dashboard. View real-time statistics and track attendee entries."
  hideNav={false}
  hideFooter={false}
>
  <script>
    // Client-side redirect if we have an org slug in session from onboarding
    try {
      const data = sessionStorage.getItem('blessbox_onboarding_data');
      if (data) {
        const parsed = JSON.parse(data);
        if (parsed?.organizationSlug) {
          const target = `/dashboard/organization/${parsed.organizationSlug}`;
          if (location.pathname !== target) location.replace(target);
        }
      }
    } catch {}
  </script>
  <Wrapper>
    <!-- Dashboard Header -->
    <div class="dashboard-header py-8 border-b border-gray-200 mb-8">
      <div class="flex items-center justify-between">
        <div>
          <Text tag="h1" variant="textXL" class="font-bold text-gray-900">
            Dashboard
          </Text>
          <Text tag="p" variant="textBase" class="text-gray-600 mt-2">
            Manage your registrations, QR codes, and event data
          </Text>
        </div>
        
        <!-- Quick Actions -->
        <div class="flex space-x-4">
          <Button variant="secondary" size="medium" onclick={`window.location.href='/api/registrations/export?orgId=${organizationId}&format=csv'`}>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Export Data
          </Button>
          <Button variant="primary" size="medium">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            New QR Code
          </Button>
        </div>
      </div>
    </div>

    <!-- Filters and Search -->
    <div class="filters-section bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <form method="GET" class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <!-- Search -->
          <div>
            <label for="search" class="block text-sm font-medium text-gray-700 mb-2">
              Search
            </label>
            <input
              type="text"
              id="search"
              name="search"
              value={currentFilters.search}
              placeholder="Search names, emails..."
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-teal-500 focus:border-teal-500"
            />
          </div>

          <!-- Delivery Status Filter -->
          <div>
            <label for="deliveryStatus" class="block text-sm font-medium text-gray-700 mb-2">
              Delivery Status
            </label>
            <select
              id="deliveryStatus"
              name="deliveryStatus"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-teal-500 focus:border-teal-500"
            >
              <option value="">All Statuses</option>
              <option value="pending" selected={currentFilters.deliveryStatus === 'pending'}>
                Pending
              </option>
              <option value="delivered" selected={currentFilters.deliveryStatus === 'delivered'}>
                Delivered
              </option>
              <option value="failed" selected={currentFilters.deliveryStatus === 'failed'}>
                Failed
              </option>
            </select>
          </div>

          <!-- QR Code Filter -->
          <div>
            <label for="qrCodeLabels" class="block text-sm font-medium text-gray-700 mb-2">
              QR Code
            </label>
            <select
              id="qrCodeLabels"
              name="qrCodeLabels"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-teal-500 focus:border-teal-500"
            >
              <option value="">All QR Codes</option>
              <option value="main-entry" selected={currentFilters.qrCodeLabels === 'main-entry'}>
                Main Entry
              </option>
              <option value="vip-entry" selected={currentFilters.qrCodeLabels === 'vip-entry'}>
                VIP Entry
              </option>
              <option value="staff-entry" selected={currentFilters.qrCodeLabels === 'staff-entry'}>
                Staff Entry
              </option>
            </select>
          </div>

          <!-- Filter Actions -->
          <div class="flex items-end space-x-2">
            <Button type="submit" variant="primary" size="medium" class="flex-1">
              Apply Filters
            </Button>
            <Button 
              type="button" 
              variant="secondary" 
              size="medium"
              onclick="window.location.href = window.location.pathname"
            >
              Clear
            </Button>
          </div>
        </div>
      </form>
    </div>

    <!-- Registration Grid - The Star of the Show! ⭐ -->
    <SimpleRegistrationGrid organizationId={organizationId} />

    <!-- Dashboard Footer -->
    <div class="dashboard-footer mt-12 pt-8 border-t border-gray-200">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Quick Stats Card -->
        <div class="bg-gradient-to-br from-teal-50 to-teal-100 rounded-lg p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            </div>
            <div class="ml-4">
              <Text tag="h3" variant="textLG" class="font-semibold text-teal-900">
                Analytics
              </Text>
              <Text tag="p" variant="textSM" class="text-teal-700">
                View detailed insights and reports
              </Text>
            </div>
          </div>
        </div>

        <!-- QR Codes Card -->
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z" />
              </svg>
            </div>
            <div class="ml-4">
              <Text tag="h3" variant="textLG" class="font-semibold text-blue-900">
                QR Codes
              </Text>
              <Text tag="p" variant="textSM" class="text-blue-700">
                Manage and create new QR codes
              </Text>
            </div>
          </div>
        </div>

        <!-- Settings Card -->
        <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div class="ml-4">
              <Text tag="h3" variant="textLG" class="font-semibold text-purple-900">
                Settings
              </Text>
              <Text tag="p" variant="textSM" class="text-purple-700">
                Configure your organization settings
              </Text>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Wrapper>
</BaseLayout>

<style>
  .dashboard-header {
    background: linear-gradient(135deg, #f0fdfa 0%, #ccfbf1 100%);
    border-radius: 0.75rem;
    margin: -2rem -2rem 2rem -2rem;
    padding: 2rem;
  }
  
  .filters-section {
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.95);
  }
  
  /* Beautiful hover effects */
  .dashboard-footer .bg-gradient-to-br:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }
  
  /* Responsive design magic */
  @media (max-width: 768px) {
    .dashboard-header {
      margin: -1rem -1rem 1rem -1rem;
      padding: 1.5rem;
    }
    
    .dashboard-header .flex {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
  }
</style>