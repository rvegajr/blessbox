---
const {
  variant,
  size,
  onlyIconSize,
  gap,
  class: className,
  ...rest
} = Astro.props;
// Default button
const defaultClass = [
  "text-white",
  "bg-base-800",
  "hover:bg-base-900",
  "outline",
  "outline-base-800",
];
// Accent button
const accentClass = [
  "text-teal-900",
  "bg-teal-500",
  "hover:bg-teal-400",
  "outline",
  "outline-teal-500",
];
// Muted button
const mutedClass = [
  "text-black",
  "bg-white ",
  "hover:bg-base-50",
  "outline",
  "outline-base-200",
];
// Size (only applies if variant is not "link")
const xs = ["h-8", "px-6", "py-2", "text-xs rounded"];
const sm = ["h-9", "px-6", "py-2", "text-sm rounded-md"];
const base = ["h-10", "px-8", "py-3", "text-sm rounded-md"];
const md = ["h-11", "px-8", "py-3", "text-base rounded-md"];
const lg = ["h-12", "px-8", "py-3", "text-md rounded-md"];
const xl = ["h-13", "px-12", "py-3", "text-lg rounded-md"];
// Gap
const gapXS = ["gap-2"];
const gapSM = ["gap-4"];
const gapBase = ["gap-8"];
const gapMD = ["gap-10"];
const gapLG = ["gap-12"];
const additionalClasses = className ? className.split(" ") : [];
---

<button
  class:list={[
    "flex",
    "text-center",
    "font-medium",
    "shadow-sm",
    "items-center",
    "justify-center",
    "duration-300",
    "ease-in-out",
    "transition-all",
    "focus:outline-offset-2",
    "focus:outline-offset-white",
    "hover:shadow-none",
    "focus:outline-2",
    "focus:outline-teal-300 ",
    variant === "default" && defaultClass,
    variant === "accent" && accentClass,
    variant === "muted" && mutedClass,
    variant === "none" && [], // No additional classes for "none" variant
    size === "xs" && xs,
    size === "sm" && sm,
    size === "base" && base,
    size === "md" && md,
    size === "lg" && lg,
    size === "xl" && xl,
    gap === "xs" && gapXS,
    gap === "sm" && gapSM,
    gap === "base" && gapBase,
    gap === "md" && gapMD,
    gap === "lg" && gapLG,
    ...additionalClasses,
  ]}
  {...rest}
>
  <slot name="left-icon" />
  <slot />
  <slot name="right-icon" />
</button>
