---
const {
  variant,
  size,
  onlyIconSize,
  gap,
  class: className,
  ...rest
} = Astro.props;
// Default button
const defaultClass = [
  "text-white",
  "bg-base-800 ",
  "hover:bg-base-900",
  "ring-base-800",
];
// Primary button
const primaryClass = [
  "text-white",
  "bg-blue-600",
  "hover:bg-blue-700",
  "ring-blue-600",
];
// Secondary button
const secondaryClass = [
  "text-base-700",
  "bg-base-200",
  "hover:bg-base-300",
  "ring-base-300",
];
// Ghost button
const ghostClass = [
  "text-base-600",
  "bg-transparent",
  "hover:bg-base-100",
  "ring-transparent",
  "shadow-none",
];
// Accent button
const accentClass = ["text-base-900", "bg-teal-500 ", "ring-teal-600"];
// Muted button
const mutedClass = [
  "text-black",
  "bg-base-100",
  "hover:bg-base-100",
  "ring-base-200",
];
const xs = ["h-8", "px-4", "py-2", "text-xs rounded-full"];
const sm = ["h-9", "px-5", "py-2", "text-sm rounded-full"];
const base = ["h-10", "px-6", "py-3", "text-base rounded-full"];
const md = ["h-11", "px-7", "py-3", "text-md rounded-full"];
const lg = ["h-12", "px-8", "py-3", "text-lg rounded-full"];
const xl = ["h-13", "px-9", "py-3", "text-xl rounded-full"];
// Gap
const gapXS = ["gap-2"];
const gapSM = ["gap-4"];
const gapBase = ["gap-8"];
const gapMD = ["gap-10"];
const gapLG = ["gap-12"];
const additionalClasses = className ? className.split(" ") : [];
---

<button
  class:list={[
    "flex",
    "relative",
    "text-center",
    "font-medium",
    "items-center",
    "shadow-bottom",
    "justify-center",
    "overflow-hidden",
    "border border-transparent",
    "duration-300",
    "ease-in-out",
    "transition-all",
    "outline-offset-4",
    "hover:opacity-90",
    "hover:shadow-none",
    "focus-visible:outline-none  focus:outline-2",
    "focus:outline-teal-300 ",
    "inset-shadow-xs inset-shadow-white/30 ring  active:inset-shadow-transparent",
    variant === "default" && defaultClass,
    variant === "primary" && primaryClass,
    variant === "secondary" && secondaryClass,
    variant === "ghost" && ghostClass,
    variant === "accent" && accentClass,
    variant === "muted" && mutedClass,
    variant === "none" && [], // No additional classes for "none" variant
    size === "xs" && xs,
    size === "sm" && sm,
    size === "base" && base,
    size === "md" && md,
    size === "lg" && lg,
    size === "xl" && xl,
    gap === "xs" && gapXS,
    gap === "sm" && gapSM,
    gap === "base" && gapBase,
    gap === "md" && gapMD,
    gap === "lg" && gapLG,
    ...additionalClasses,
  ]}
  {...rest}
>
  <slot name="left-icon" />
  <slot />
  <slot name="right-icon" />
</button>
