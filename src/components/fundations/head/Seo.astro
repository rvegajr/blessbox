---
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  title="BlessBox - QR-Based Registration & Verification System"
  description="Streamlined QR-based registration and verification system for organizations managing events like food distributions, seminar registrations, and volunteer sign-ups."
  canonical="https://blessbox.vercel.app/"
  openGraph={{
    url: "https://blessbox.vercel.app/",
    title: "BlessBox - QR-Based Registration & Verification System",
    description: "Streamlined QR-based registration and verification system for organizations managing events like food distributions, seminar registrations, and volunteer sign-ups.",
    images: [
      {
        url: "https://blessbox.vercel.app/og-image.jpg",
        width: 1200,
        height: 630,
        alt: "BlessBox - QR Registration System",
        type: "image/jpeg",
      },
    ],
    site_name: "BlessBox",
    type: "website",
    locale: "en_US",
  }}
  twitter={{
    handle: "@blessbox",
    site: "@blessbox",
    cardType: "summary_large_image",
  }}
/>

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content="https://blessbox.vercel.app/" />
<meta property="og:title" content="BlessBox - QR-Based Registration & Verification System" />
<meta
  property="og:description"
  content="Streamlined QR-based registration and verification system for organizations managing events like food distributions, seminar registrations, and volunteer sign-ups."
/>
<meta
  property="og:image"
  content="https://blessbox.vercel.app/og-image.jpg"
/>

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content="https://blessbox.vercel.app/" />
<meta property="twitter:title" content="BlessBox - QR-Based Registration & Verification System" />
<meta
  property="twitter:description"
  content="Streamlined QR-based registration and verification system for organizations managing events like food distributions, seminar registrations, and volunteer sign-ups."
/>
<meta
  property="twitter:image"
  content="https://blessbox.vercel.app/og-image.jpg"
/>

<!-- Canonical URL -->
<link rel="canonical" href="https://blessbox.vercel.app/" />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />
<meta name="keywords" content="QR code registration, event management, food distribution, volunteer sign-up, registration system, verification system, nonprofit tools" />
<meta name="author" content="BlessBox Team" />
<meta name="application-name" content="BlessBox" />
<meta name="theme-color" content="#2563eb" />
