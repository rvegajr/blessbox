{
    "window.title": "${activeEditorShort}${separator}${rootName}${separator}${profileName}${separator}[Branch: main]",
    "workbench.editor.enablePreview": false,
    // ✅ Use bash shell by default
    "terminal.integrated.shell.osx": "/bin/bash",
  
    // ✅ Set bash as the default terminal profile
    "terminal.integrated.defaultProfile.osx": "bash",
  
    // ✅ Define bash and zsh profiles
    "terminal.integrated.profiles.osx": {
      "bash": {
        "path": "/bin/bash",
        "args": ["-l"]
      },
      "zsh": {
        "path": "/bin/zsh",
        "args": ["-l"],
        "icon": "terminal"
      }
    },
  
    // ✅ Optional: Set automation profile to Bash too
    "terminal.integrated.automationProfile.osx": {
      "path": "/bin/bash",
      "args": ["-l"]
    },
  
    // ✅ Let Bash inherit environment as normal
    "terminal.integrated.inheritEnv": true,
    "kiroAgent.configureMCP": "Disabled",
  }