{
  "name": "blessbox",
  "version": "1.0.0",
  "description": "Streamlined QR-based registration and verification system for organizations managing events like food distributions, seminar registrations, and volunteer sign-ups",
  "private": true,
  "type": "module",
  "scripts": {
    "critical-check": "npm run test:walk:local",
    "dev": "next dev --port 7777",
    "dev:fresh": "npm run clean && npm run dev",
    "clean": "rm -rf .next node_modules/.cache && npm cache clean --force",
    "clean:all": "npm run clean && rm -rf node_modules && npm install",
    "start": "next start --port 7777",
    "build": "next build",
    "preview": "next start",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "TEST_ENV=production BASE_URL=https://www.blessbox.org npx playwright test",
    "test:e2e:production": "BASE_URL=https://www.blessbox.org npx playwright test",
    "test:e2e:production:all": "BASE_URL=https://www.blessbox.org npx playwright test --reporter=html",
    "test:e2e:dev": "TEST_ENV=development npx playwright test",
    "test:e2e:local": "TEST_ENV=local npx playwright test",
    "test:e2e:headed": "TEST_ENV=production BASE_URL=https://www.blessbox.org npx playwright test --headed",
    "test:e2e:debug": "TEST_ENV=production BASE_URL=https://www.blessbox.org npx playwright test --debug",
    "test:e2e:interactive": "node scripts/run-e2e-tests.js",
    "test:e2e:business": "TEST_ENV=production npx playwright test tests/e2e/blessbox-business-flow.spec.ts",
    "test:e2e:business:headed": "TEST_ENV=production npx playwright test tests/e2e/blessbox-business-flow.spec.ts --headed",
    "test:report": "npx playwright show-report",
    "test:regress:ui": "npx vitest tests/components/FormBuilderWizard.test.tsx tests/components/QRConfigWizard.test.tsx tests/components/GlobalHelpButton.test.tsx --run",
    "test:smoke:local": "CI= TEST_ENV=local BASE_URL=http://localhost:7777 npx playwright test tests/e2e/app-inventory-smoke.spec.ts tests/e2e/auth-bypass-protected-routes.spec.ts tests/e2e/form-builder-regression.spec.ts tests/e2e/api-inventory-smoke.spec.ts tests/e2e/registration-public-flow.spec.ts",
    "test:qa:local": "CI= TEST_ENV=local BASE_URL=http://localhost:7777 npx playwright test tests/e2e/qa-testing-guide-coverage.spec.ts",
    "test:qa:production": "CI= TEST_ENV=production PROD_STRICT=true BASE_URL=https://www.blessbox.org npx playwright test tests/e2e/qa-testing-guide-coverage.spec.ts",
    "test:qa:production:public": "CI= TEST_ENV=production BASE_URL=https://www.blessbox.org npx playwright test tests/e2e/qa-testing-guide-coverage.spec.ts",
    "test:walk:local": "npm run test:regress:ui && npm run test:smoke:local && npm run test:qa:local",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "db:setup": "tsx scripts/database/setup-database.ts",
    "db:studio": "drizzle-kit studio",
    "validate:env": "tsx scripts/validate-environment.ts",
    "test:email": "tsx scripts/tests/test-email-system.ts",
    "test:db": "tsx scripts/database/setup-database.ts --test",
    "health:check": "curl -s http://localhost:7777/api/system/health-check | jq .",
    "diagnostics": "open http://localhost:7777/system/diagnostics",
    "setup:env": "tsx scripts/setup-environment.ts",
    "setup:vercel": "./scripts/setup-vercel.sh",
    "env:pull": "vercel env pull .env.local",
    "env:list": "vercel env ls",
    "mailhog:check": "node scripts/check-mailhog.js"
  },
  "dependencies": {
    "@libsql/client": "^0.15.10",
    "@sendgrid/mail": "^8.1.5",
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^6.4.17",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "aos": "^2.3.4",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "next": "^16.0.8",
    "next-auth": "^5.0.0-beta.29",
    "nodemailer": "^6.9.15",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "square": "^43.2.0",
    "tailwind-scrollbar-hide": "^2.0.0",
    "tailwindcss": "^4.1.7",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "happy-dom": "^18.0.1",
    "jsdom": "^27.0.1",
    "playwright": "^1.54.2",
    "postcss": "^8.4.49",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
