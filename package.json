{
  "name": "blessbox",
  "version": "1.0.0",
  "description": "Streamlined QR-based registration and verification system for organizations managing events like food distributions, seminar registrations, and volunteer sign-ups",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "astro dev --port 7777 --open",
    "dev:fresh": "npm run clean && npm run dev",
    "clean": "rm -rf .astro dist node_modules/.cache .vite && npm cache clean --force",
    "clean:all": "npm run clean && rm -rf node_modules && npm install",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "TEST_ENV=production npx playwright test",
    "test:e2e:dev": "TEST_ENV=development npx playwright test",
    "test:e2e:local": "TEST_ENV=local npx playwright test",
    "test:e2e:headed": "TEST_ENV=production npx playwright test --headed",
    "test:e2e:debug": "TEST_ENV=production npx playwright test --debug",
    "test:e2e:interactive": "node scripts/run-e2e-tests.js",
    "test:e2e:business": "TEST_ENV=production npx playwright test tests/e2e/blessbox-business-flow.spec.ts",
    "test:e2e:business:headed": "TEST_ENV=production npx playwright test tests/e2e/blessbox-business-flow.spec.ts --headed",
    "test:report": "npx playwright show-report",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "db:setup": "tsx scripts/database/setup-database.ts",
    "db:studio": "drizzle-kit studio",
    "validate:env": "tsx scripts/validate-environment.ts",
    "test:email": "node scripts/tests/test-email-system.js",
    "test:db": "tsx scripts/database/setup-database.ts --test",
    "health:check": "curl -s http://localhost:3000/api/system/health-check | jq .",
    "diagnostics": "open http://localhost:3000/system/diagnostics",
    "setup:env": "tsx scripts/setup-environment.ts",
    "setup:vercel": "./scripts/setup-vercel.sh",
    "env:pull": "vercel env pull .env.local",
    "env:list": "vercel env ls"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.2.6",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.4.0",
    "@astrojs/vercel": "^8.2.5",
    "@astrolib/seo": "^1.0.0-beta.8",
    "@libsql/client": "^0.15.10",
    "@sendgrid/mail": "^8.1.5",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.7",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^6.4.17",
    "@types/qrcode": "^1.5.5",
    "astro": "^5.7.13",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "nodemailer": "^7.0.5",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.5.4",
    "tailwind-scrollbar-hide": "^2.0.0",
    "tailwindcss": "^4.1.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "happy-dom": "^18.0.1",
    "playwright": "^1.54.2",
    "tsx": "^4.20.3",
    "vitest": "^3.2.4"
  }
}
