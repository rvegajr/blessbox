{
  "name": "blessbox",
  "version": "2.0.0",
  "description": "BlessBox - Next.js QR-based registration and verification system",
  "private": true,
  "scripts": {
    "dev": "next dev --port 7777",
    "build": "next build",
    "start": "next start --port 7777",
    "lint": "next lint",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:non-blocking": "playwright test --config=playwright.config.non-blocking.ts",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "test:all:non-blocking": "npm run test && npm run test:e2e:non-blocking",
    "deploy:production": "./scripts/deploy-production.sh",
    "deploy:production:non-blocking": "./scripts/deploy-production-non-blocking.sh"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.11.0",
    "@hookform/resolvers": "^3.9.1",
    "@libsql/client": "^0.15.10",
    "@radix-ui/react-slot": "^1.2.3",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "driver.js": "^1.3.6",
    "drizzle-orm": "^0.44.4",
    "jsonwebtoken": "^9.0.2",
    "next": "^15.1.5",
    "next-auth": "^5.0.0-beta.25",
    "nodemailer": "^7.0.5",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^2.5.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "24.9.1",
    "@types/nodemailer": "^6.4.17",
    "@types/qrcode": "^1.5.5",
    "@types/react": "19.2.2",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9",
    "eslint-config-next": "^15.1.5",
    "happy-dom": "^18.0.1",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.7",
    "typescript": "5.9.3",
    "vitest": "^3.2.4"
  }
}
