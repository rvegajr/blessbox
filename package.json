{
  "name": "blessbox",
  "version": "1.0.0",
  "description": "Streamlined QR-based registration and verification system for organizations managing events like food distributions, seminar registrations, and volunteer sign-ups",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "astro dev --port 7777 --open",
    "dev:fresh": "npm run clean && npm run dev",
    "clean": "rm -rf .astro dist node_modules/.cache .vite && npm cache clean --force",
    "clean:all": "npm run clean && rm -rf node_modules && npm install",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "db:setup": "tsx scripts/database/setup-database.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.2.6",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.4.0",
    "@astrojs/vercel": "^8.2.5",
    "@astrolib/seo": "^1.0.0-beta.8",
    "@libsql/client": "^0.15.10",
    "@sendgrid/mail": "^8.1.5",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.7",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^6.4.17",
    "@types/qrcode": "^1.5.5",
    "astro": "^5.7.13",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.5",
    "qrcode": "^1.5.4",
    "tailwind-scrollbar-hide": "^2.0.0",
    "tailwindcss": "^4.1.7"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "happy-dom": "^18.0.1",
    "tsx": "^4.20.3",
    "vitest": "^3.2.4"
  }
}
